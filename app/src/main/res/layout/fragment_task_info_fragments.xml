<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary_color"
    android:padding="16dp"
    tools:context=".fragments.TaskInfoFragments">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <Button
                android:id="@+id/btn_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color"
                android:drawablePadding="8dp"
                android:text="Voltar"
                android:textColor="@color/button_text_color"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textStyle="bold"
                android:elevation="8dp" />


            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sua Tarefa"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />


            <TextView
                android:id="@+id/tv_task_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome da Tarefa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="12dp"
                android:text="Estudar Kotlin"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tv_task_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horário"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_task_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="10:00 - 11:00"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tv_task_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Revisar RecyclerView e adaptadores"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:minLines="3"
                android:gravity="top|start"
                android:layout_marginBottom="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/accent_color"
                    android:text="Editar"
                    android:textColor="@color/button_text_color"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:elevation="8dp" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/error_color"
                    android:text="Excluir"
                    android:textColor="@color/button_text_color"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold"
                    android:elevation="8dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>